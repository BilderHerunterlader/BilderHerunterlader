<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ruleDefinition name="500px.com" version="0.3" redirect="false" resend="false">
    <urlPattern>https://500px\.com/photo/.+?</urlPattern>
    <useContentDisposition>false</useContentDisposition>
    <reducePathLength>true</reducePathLength>
    <reduceFilenameLength>false</reduceFilenameLength>
    <referrerMode>NO_REFERRER</referrerMode>
    <customReferrer></customReferrer>
    <downloadReferrerMode>LAST_CONTAINER_URL</downloadReferrerMode>
    <downloadCustomReferrer></downloadCustomReferrer>
    <duplicateRemoveMode>DEFAULT</duplicateRemoveMode>
    <sendCookies>true</sendCookies>
    <pipes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:type="URLRegexPipeline" mode="CONTAINER_PAGE_SOURCECODE" waitBeforeExecute="1" urlDecodeResult="true" sendCookies="true">
        <regexp pattern="&lt;meta content=[&quot;'](https://.+?\.500px\.org/photo/.+?/.+?/.+?)[&quot;'] property=[&quot;']og:image[&quot;']&gt;" replacement="$1"/>
    </pipes>
    <failuresPipes failureType="FAILED_FILE_NOT_EXIST" checkURL="true" checkThumbURL="true" checkPageSourceCode="false"/>
    <filenamePipeline mode="CONTAINER_PAGE_SOURCECODE">
        <regexp pattern="&lt;title&gt;(.+?) / 500px&lt;/title&gt;" replacement="$1.jpg"/>
    </filenamePipeline>
    <filenameDownloadSelectionPipeline mode="CONTAINER_URL_FILENAME_PART"/>
    <restriction maxConnections="0"/>
</ruleDefinition>
